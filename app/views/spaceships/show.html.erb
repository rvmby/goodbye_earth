
<div class="main">
  <h1 class="text-align-center">Welcome to your spaceship <i class="fa-brands fa-space-awesome"></i> <%= @spaceship.name %></h1>
  <h4 class="show-h4">Here you can find more information and book your journey with <%= @spaceship.name %></h4>


<div class="min-height">
  <div class="container-md pt-3">
    <div class="image-box">
    <% if @spaceship.photo.attached? %>
    <%= cl_image_tag @spaceship.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <img src="https://blu-ray-rezensionen.net/wp-content/uploads/2020/01/serenity-flucht-in-neue-welten-4k-uhd-blu-ray-review-szene-2-e1578382288763.jpg" alt="">
    <% end %>
    </div>
</div>

<div class="container-md pt-3 pb-3 my-3">
  <div class="d-flex justify-content-between">
    <div class="info"style="width: 65%">
      <h2><%= @spaceship.name %></h2>
      <p>occupancy: <%= @spaceship.max_people %></p>
      <p>price: $<%= @spaceship.price %></b> p/d</p>
      <hr class="solid">
      <p><%= @spaceship.description %></p>
    </div>
      <div class="booking-form">
        <%= simple_form_for [@spaceship, @booking], data: { controller: 'flatpickr' } do |f| %>
        <%= f.input :start_time, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
        <%= f.input :end_time, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
        <%= f.submit 'Send Request' %>
      <% end %>
      </div>
    </div>
        <div class="edit d-flex">
      <% if policy(@spaceship).edit? %>
      <%= button_to "Edit this spaceship", edit_spaceship_path(@spaceship) %>
      <% end %>

      <%= button_to "Destroy this spaceship", @spaceship, method: :delete if policy(@spaceship).destroy? %>
      </div>
  </div>
</div>
</div>

</div>

